pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/mafid456/hi.git'
            }
        }

        stage('Deploy Tooplate Site') {
            steps {
                sh '''
                    rm -rf /var/www/html/tooplate_site/*
                    cp -r * /var/www/html/tooplate_site/
                '''
               
            }
        }
    }
}

